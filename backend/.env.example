# Azure OpenAI Configuration (using Azure AD authentication)
AZURE_OPENAI_ENDPOINT=https://<your-resource>.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4o-realtime-preview
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Azure Cosmos DB Configuration (using Azure AD authentication)
COSMOS_ENDPOINT=https://<your-cosmos>.documents.azure.com:443/
COSMOS_DATABASE=never-alone

# Azure Redis Cache Configuration (still uses password-based auth)
REDIS_HOST=<your-redis>.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=<your-redis-key>
REDIS_TLS=true

# Azure Blob Storage Configuration (using Azure AD authentication)
BLOB_STORAGE_ACCOUNT_NAME=<your-storage-account-name>
BLOB_CONTAINER_AUDIO=audio-files
BLOB_CONTAINER_PHOTOS=photos

# Azure Text-to-Speech Configuration
SPEECH_KEY=<your-speech-key>
SPEECH_REGION=eastus2

# YouTube API (for music integration - optional)
YOUTUBE_API_KEY=<your-youtube-api-key>

# Application Configuration
PORT=3000
NODE_ENV=development
